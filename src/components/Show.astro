---
interface Props {
  title: string;
  date?: string;
  author?: string;
  authorLabel?: string;
}

const { title, date, author, authorLabel } = Astro.props;
---

<div class="space-y-6">
  <div class="space-y-1 text-left">
    <div class="flex flex-col items-start gap-2 md:flex-row md:justify-between md:items-baseline">
      <h3 class="text-xl md:text-2xl font-bold text-gray-800 fancy-title break-words max-w-full">
        {title}
      </h3>
      {date && (
        <span class="text-base md:text-xl text-gray-600 italic">
          {date}
        </span>
      )}
    </div>
    {
      author && (
        <div class="text-xs md:text-base text-gray-600">
          {authorLabel}
          <span class="font-semibold text-gray-700">{author}</span>
        </div>
      )
    }
  </div>

  <div class="bg-slate-200 rounded-lg shadow-xl p-4 relative overflow-hidden">
    <!-- Decorative quote mark -->
    <div
      class="absolute top-2 left-4 text-4xl md:text-7xl text-gray-300 font-serif leading-none fancy-quote"
    >
      "
    </div>

    <div class="relative z-10">
      <div class="text-gray-700 text-base md:text-lg leading-relaxed px-2 text-left">
        <slot />
      </div>
    </div>
  </div>
</div>

<style>
  .fancy-title {
    font-family: "Borel", cursive;
    letter-spacing: 0.05em;
  }

  .fancy-quote {
    font-family: "Borel", cursive;
    opacity: 0.4;
    user-select: none;
    pointer-events: none;
  }
</style>
